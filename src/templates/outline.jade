doctype html
html(lang='en')
  head
    title #{title}
    meta(http-equiv='Content-Type', content='text/html; CHARSET=utf-8')
    meta(name='description', content='#{meta.description}')
    meta(name='keywords', content='#{meta.keywords}')
    link(rel='shortcut icon', type='image/x-icon', href='/img/favicon.ico')
    link(rel='stylesheet', type='text/css', href='/css/common.css')
    line(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link#theme_css(rel='stylesheet', type='text/css', href='/themes/#{theme}/style.css')

  body(style='width:100%; font-size: 80%;')
    form#logout(action='/?page=login', method='post', style='display:none;')
      input(type='hidden', name='action', value='logout')
    table#main.layout-table
      tr
        td#main-header(colspan='2')
          table#header.outline
            tr
              td.cell0.right
                table.layout-table
                  tr
                    td
                      a(href='/')
                        img#theme_banner(src='/img/logo.png', alt='#{title}', title='#{title}')
                    td
                      table#headerInfo.outline
                        tr.header1
                          th #{infobox.title}
                        tr
                          td.cell1.center
                            | 03-26-16, 05:46 am — 
                            span#viewCount 327
                            |  views
                            br
                            #{infobox.text}
            tr.header1
              th#navBar
                div(style='display:inline-block; float:right;')
                  span.navButton
                    a(href='/?page=admin') Admin
                  #userMenuContainer.dropdownContainer
                    #userMenuButton.navButton
                      a(href='/?page=profile&id=1')
                        span.userlink(style='color: #5555FF;', title='#{user.name} #{user.id} [#{user.rank}]') #{user.name}
                      i.icon-caret-down
                    ul.dropdownMenu
                      li
                        a(href='/?page=editprofile') Edit profile
