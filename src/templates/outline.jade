                  span.navButton
                    a(href='/?page=online') Online users
                  span.navButton
                    a(href='/?page=lastposts') Last posts
                  span.navButton
                    a(href='/?page=search') Search
            tr.cell0
              td.smallFonts.center
                #onlineUsers(style='min-height:16px;')
                  | 1 user online: 
                  a(href='/?page=profile&id=1')
                    span.userlink(style='color: #5555FF;', title='#{user.name} #{user.id} [#{user.rank}]') #{user.name}
                script(type='text/javascript').
                  onlineFID = 0;
                  window.addEventListener("load",  startOnlineUsers, false);
            tr.header1
